<?xml version="1.0"?>
<config>
    <modules>
        <Mygento_Kkm>
            <version>1.2.1</version>
        </Mygento_Kkm>
    </modules>
    <frontend>
        <routers>
            <kkm>
                <use>standard</use>
                <args>
                    <module>Mygento_Kkm</module>
                    <frontName>kkm</frontName>
                </args>
            </kkm>
        </routers>
    </frontend>
    <global>
        <blocks>
            <kkm>
                <class>Mygento_Kkm_Block</class>
            </kkm>
        </blocks>
        <helpers>
            <kkm>
                <class>Mygento_Kkm_Helper</class>
            </kkm>
        </helpers>
        <models>
            <kkm>
                <class>Mygento_Kkm_Model</class>
                <resourceModel>kkm_resource</resourceModel>
            </kkm>
            <kkm_resource>
                <class>Mygento_Kkm_Model_Resource</class>
                <deprecatedNode>kkm_mysql4</deprecatedNode>
                <entities>
                    <token>
                        <!--deprecated entity since 1.0.4-->
                        <table>mygento_kkm_token</table>
                    </token>
                    <status>
                        <table>mygento_kkm_status</table>
                    </status>
                    <log_entry>
                        <table>mygento_logs</table>
                    </log_entry>
                </entities>
            </kkm_resource>
        </models>
        <events>
            <sales_order_save_after>
                <observers>
                    <kkm_check_order_status>
                        <class>kkm/observer</class>
                        <method>checkStatus</method>
                    </kkm_check_order_status>
                </observers>
            </sales_order_save_after>
            <sales_order_invoice_save_after>
                <observers>
                    <kkm_sales_order_invoice_save_after>
                        <class>kkm/observer</class>
                        <method>sendCheque</method>
                    </kkm_sales_order_invoice_save_after>
                </observers>
            </sales_order_invoice_save_after>
            <sales_order_creditmemo_save_after>
                <observers>
                    <kkm_sales_order_creditmemo_save_after>
                        <class>kkm/observer</class>
                        <method>cancelCheque</method>
                    </kkm_sales_order_creditmemo_save_after>
                </observers>
            </sales_order_creditmemo_save_after>
            <adminhtml_widget_container_html_before>
                <observers>
                    <kkm_add_button_resend>
                        <class>kkm/observer</class>
                        <method>addExtraButtons</method>
                    </kkm_add_button_resend>
                </observers>
            </adminhtml_widget_container_html_before>
        </events>
        <resources>
            <kkm_setup>
                <setup>
                    <module>Mygento_Kkm</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </kkm_setup>
        </resources>
        <template>
            <email>
                <kkm_error_notification>
                    <label>[KKM] Error Email</label>
                    <file>kkm_error_notification.html</file>
                    <type>html</type>
                </kkm_error_notification>
                <kkm_general_send_report_template translate="label" module="kkm">
                    <label>[KKM] Report Email</label>
                    <file>kkm_report.html</file>
                    <type>html</type>
                </kkm_general_send_report_template>
            </email>
        </template>
    </global>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <kkm after="Mage_Adminhtml">Mygento_Kkm_Adminhtml</kkm>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <menu>
            <mygento translate="title" module="kkm">
                <title>Mygento Modules</title>
                <sort_order>60</sort_order>
                <children>
                    <kkm translate="title" module="kkm">
                        <title>KKM</title>
                        <sort_order>40</sort_order>
                        <children>
                            <statuses module="kkm">
                                <title>Statuses</title>
                                <sort_order>0</sort_order>
                                <action>adminhtml/kkm_status</action>
                            </statuses>
                            <logs translate="title" module="kkm">
                                <title>Logs</title>
                                <action>adminhtml/kkm_cheque/viewlogs</action>
                                <sort_order>50</sort_order>
                            </logs>
                            <settings translate="title" module="kkm">
                                <title>Settings</title>
                                <action>adminhtml/system_config/edit/section/kkm</action>
                                <sort_order>100</sort_order>
                            </settings>
                        </children>
                    </kkm>
                </children>
            </mygento>
        </menu>
        <layout>
            <updates>
                <kkm>
                    <file>mygento/kkm.xml</file>
                </kkm>
            </updates>
        </layout>
        <translate>
            <modules>
                <kkm>
                    <files>
                        <default>Mygento_Kkm.csv</default>
                    </files>
                </kkm>
            </modules>
        </translate>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <kkm>
                                            <title>Mygento Kkm Configuration</title>
                                        </kkm>
                                    </children>
                                </config>
                            </children>
                        </system>
                        <kkm_cheque translate="title" module="kkm">
                            <title>KKM options</title>
                            <children>
                                <viewstatuses translate="title">
                                    <title>View statuses</title>
                                </viewstatuses>
                                <newstatus translate="title">
                                    <title>Add status manually</title>
                                </newstatus>
                                <viewlogs translate="title">
                                    <title>View logs</title>
                                </viewlogs>
                                <resend translate="title">
                                    <title>Manually send invoice/creditmemo</title>
                                </resend>
                                <forceresendAction translate="title">
                                    <title>Manually force send invoice/creditmemo</title>
                                </forceresendAction>
                                <checkstatus translate="title">
                                    <title>Manually check status of invoice/creditmemo</title>
                                </checkstatus>
                                <clearlogs translate="title">
                                    <title>Clear logs table</title>
                                </clearlogs>
                                <getjson translate="title">
                                    <title>Download KKM order data in *.json file</title>
                                </getjson>
                                <getunittest translate="title">
                                    <title>Download data for PhpUnit test from Invoice or Creditmemo</title>
                                </getunittest>
                            </children>
                        </kkm_cheque>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
    <default>
        <kkm>
            <general>
                <enabled>0</enabled>
                <debug>0</debug>
                <tax_all>1</tax_all>
                <tax_options>vat0</tax_options>
                <shipping_tax>vat0</shipping_tax>
                <default_shipping_name>1</default_shipping_name>
                <auto_send_after_invoice>1</auto_send_after_invoice>
                <auto_send_after_cancel>1</auto_send_after_cancel>
                <fail_status>kkm_failed</fail_status>
                <cron_update_expr>10 * * * *</cron_update_expr>
                <autosend_limit>5</autosend_limit>
                <force_resend>0</force_resend>
                <apply_algorithm>1</apply_algorithm>
                <spread_discount>0</spread_discount>
                <split_allowed>0</split_allowed>
                <send_report_template>kkm_general_send_report_template</send_report_template>
                <report_sender_name>KKM Reporter</report_sender_name>
                <report_sender_email>no-reply@example.com</report_sender_email>
                <report_period>dailyprev</report_period>
                <cron_report_expr>1 0 * * *</cron_report_expr>
                <show_notif_in_admin>1</show_notif_in_admin>
                <debug_level>3</debug_level>
            </general>
        </kkm>
    </default>
    <crontab>
        <jobs>
            <kkm_update_transactions>
                <schedule>
                    <config_path>kkm/general/cron_update_expr</config_path>
                </schedule>
                <run>
                    <model>kkm/observer::updateTransactions</model>
                </run>
            </kkm_update_transactions>
            <kkm_send_report>
                <schedule>
                    <config_path>kkm/general/cron_report_expr</config_path>
                </schedule>
                <run>
                    <model>kkm/report::sendReport</model>
                </run>
            </kkm_send_report>
        </jobs>
    </crontab>
</config>
